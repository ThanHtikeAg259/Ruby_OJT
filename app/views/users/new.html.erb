<div class="container">
  <div class="row justify-content-center">
    <div class="main-content">
      <h3>Register</h3>
      <div class="col-6">
        <%= form_with scope: :user, url: "/users/confirm",:html => {:id => "user-new"}, local: true do |form| %>
        <div class="form-group row">
          <%= form.label :name, class: 'col-sm-2 col-form-label' %>
          <div class="col-sm-10">
            <%= form.text_field :name, class: 'form-control', required: true %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :email, class: 'col-sm-2 col-form-label' %>
          <div class="col-sm-10">
            <%= form.text_field :email, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :password, class: 'col-sm-2 col-form-label' %>
          <div class="col-sm-10">
            <%= form.password_field :password, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :'Password confirmation', class: 'col-sm-2 col-form-label' %>
          <div class="col-sm-10">
            <%= form.password_field :password_confirmation, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :type, class: 'col-sm-2 col-form-label' %>
          <div class="col-sm-10">
          <%= form.select :type, [['Admin',0],['User',1]], {}, {class: "form-select"} %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :phone, class: 'col-sm-2 col-form-label' %>
          <div class="col-sm-10">
            <%= form.text_field :phone, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :dob, class: 'col-sm-2 col-form-label' %>
          <div class="col-sm-10">
            <%= form.text_field :dob, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :address, class: 'col-sm-2 col-form-label' %>
          <div class="col-sm-10">
            <%= form.text_field :address, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :profile, class: 'col-sm-2 col-form-label' %>
          <div class="col-sm-10">
            <%= form.text_field :profile, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= form.submit "Register", class: 'form-control btn-primary' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>