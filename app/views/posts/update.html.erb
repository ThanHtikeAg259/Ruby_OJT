<div class="container">
  <div class="row justify-content-center">
    <div class="main-content w-75">
      <h3>Edit Post</h3>
      <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
          <%= form_with scope: :post, url: "/posts/update", local: true do |form| %>
          <div class="form-group row mb-4">
            <%= form.label :title, class: 'col-md-4 col-form-label' %>
            <div class="col-md-8">
              <%= form.text_field :title, readonly: true, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group row mb-4">
            <%= form.label :description, class: 'col-md-4 col-form-label' %>
            <div class="col-md-8">
              <%= form.text_area :description, readonly: true, class: 'form-control text-area' %>
            </div>
          </div>

          <div class="form-group row mb-4">
            <%= form.label :status, class: 'col-md-4 col-form-label' %>
            <div class="col-md-8">
              <label class="switch">
                <%= form.check_box :status, disabled: true %>
                <span class="slider round op"></span>
              </label>
            </div>
          </div>

          <div class="form-group row mb-4">
            <div class="col-md-4"></div>
            <div class="col-md-3">
              <%= form.submit "Confirm", class: 'btn btn-success' %>
            </div>
            <div class="col-md-3">
              <%= link_to 'Cancel', 'javascript:history.back()', :class => "btn btn-secondary" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>