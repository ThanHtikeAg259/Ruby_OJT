<div class="container">
  <div class="row justify-content-center">
    <div class="main-content w-75">
      <h3>Create Post</h3>
      <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
          <%= form_with(model: @post, local: true) do |form| %>
          <div class="form-group row mb-4">
            <%= form.label :title, class: 'col-md-4 col-form-label' %>
            <div class="col-md-8">
              <%= form.text_field :title, disabled: true, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group row mb-4">
            <%= form.label :description, class: 'col-md-4 col-form-label' %>
            <div class="col-md-8">
              <%= form.text_area :description, disabled: true, class: 'form-control text-area' %>
            </div>
          </div>

          <div class="form-group row mb-4">
            <div class="col-md-4"></div>
            <div class="col-md-2 me-3">
              <%= form.submit "Confirm", class: 'btn btn-success' %>
            </div>
            <div class="col-md-2">
              <%= link_to 'Cancel', 'javascript:history.back()', :class => "btn btn-secondary" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>